<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="TaskMgmtApp">
		<!-- <jta-data-source>{jdbc/{databaseResourceName}</jta-data-source> -->
		<!-- <class>{Entity class location}</class> -->
		<shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>

		<properties>
			<property name="eclipselink.ddl-generation" value="create-tables" />
			<!-- <property name="eclipselink.logging.level" value="FINE"/> <property 
				name="eclipselink.logging.parameters" value="true"/> -->
			<property name="eclipselink.weaving.changetracking" value="false" />
			<property name="eclipselink.weaving.fetchgroups" value="false" />
			<property name="eclipselink.weaving.internal" value="false" />
		</properties>
	</persistence-unit>
</persistence>
